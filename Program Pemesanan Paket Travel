	case 8:
		strcpy (bulan, "Agustus");
		break;
	case 9: 
		strcpy (bulan, "September");
		break;
	case 10: 
		strcpy (bulan, "Oktober");
		break; 
	case 11: 
		strcpy (bulan, "November"); 
		break;
	case 12: 
		strcpy (bulan, "Desember");
