			printf("Masukkan Username : ");
			scanf("%s", &registrasi.username );
			fflush(stdin); 
			printf("Masukkan Password : ");
			scanf("%s", &registrasi.password); 
			fflush(stdin);	
			
			if (strcmp (registrasi.username,"SINTA")==0 && strcmp (registrasi.password, "letskuy1")==0 || 
				strcmp (registrasi.username,"MEIKA")==0 && strcmp (registrasi.password, "letskuy2")==0 ){
				// fungsi untuk membandingkan username dan password yang dimasukkan dengan yang ditentukan
				printf("LOGIN BERHASIL!\n\n");
				printf("\n------------------SELAMAT DATANG------------------\n\n");
				getch();
			}
			else{
				registrasi.ulang=registrasi.ulang+1;
				//fungsi untuk menentukan berapa kali perulangan password akan diijinkan
				if(registrasi.ulang<3){
					printf("USERNAME ATAU PASSWORD SALAH\n\n");
					goto login;
				}	
				else{
					printf("Akses Ditolak!");
					getch();
				}
			}
			break;
		default:
			printf("Mohon Hanya Masukkan Antara Angka 1 atau 2!\n");
			goto menu;
	}
	
	menu_utama:
	system("cls");
	printf("======================================================================\n");
	printf("                           LETS'S KUY TRAVEL\n");
	printf("======================================================================\n\n");
	printf("-------------------------------------------------------------------------\n");
	printf("| Kode Paket |              Nama Paket              |     Harga	        |\n");
	printf("-------------------------------------------------------------------------\n");
	printf("|     1      |	    Paket Barat Nusa Penida         |Rp 350.000/orang   |\n");
	printf("|     2      |      Paket Timur Nusa Penida         |Rp 350.000/orang   |\n");
	printf("|     3      |   Paket Barat dan Timur Nusa Penida  |Rp 625.000/orang   |\n");
	printf("|     4      |           Paket Snorkling            |Rp 400.000/orang   |\n");
	printf("|     5      |	  Paket Tirta Yatra Nusa Penida     |Rp 450.000/orang   |\n");
	printf("-------------------------------------------------------------------------\n");	
	
	pilihan:
	printf ("Pilihan Paket Yang Diinginkan (1-5)??\n");
	scanf ("%d", &pesanan.pilihan);
	fflush(stdin);
	system("cls");
	
	switch (pesanan.pilihan) {
		case 1: 
		strcpy (paket.nama, "Paket Barat Nusa Penida");
		strcpy (paket.lama, "Satu");
		paket.harga=350000;
		printf("====================================================================\n");
		printf("                     Paket Barat Nusa Penida\n");
		printf("====================================================================\n");
		printf("Lama Travel: %s Hari\n\n", paket.lama);
		printf("Objek Wisata:\n");
		printf("a. Kelingking Beach\n");
		printf("b. Broken Beach\n");
		printf("c. Angel's Billabong\n");
		printf("d. Cristal Bay\n\n");
		printf("Fasilitas:\n");
		printf("a. Private Tour Dengan Mobil\n");
		printf("b. Panjemputan Ke Lokasi\n");
		printf("c. Guide Lokal Berpengalaman");
		break;
		
		case 2 : 
			strcpy (paket.nama, "Paket Timur Nusa Penida");
			strcpy (paket.lama, "Satu");
			paket.harga=350000;
			printf("====================================================================\n");
			printf ("                     Paket Timur Nusa Penida\n");
			printf("====================================================================\n");
			printf("Lama Travel: %s Hari\n\n", paket.lama);
			printf("Objek Wisata:\n");
			printf("a. Diamond Beach\n");
			printf("b. Atuh Beach\n");
			printf("c. Pulau Seribu/Raja Lima\n");
			printf("d. Bukit Telletubies\n\n");
			printf("Fasilitas:\n");
			printf("a. Private Tour Dengan Mobil\n");
			printf("b. Penjemputan Ke Lokasi\n");
			printf("c. Guide Lokal Berpengalaman\n\n");
			break;
			
		case 3 : 
		strcpy (paket.nama, "Paket Barat dan Timur Nusa Penida ");
		strcpy (paket.lama, "Dua");
		paket.harga=600000;
		printf("====================================================================\n");
		printf	("                     Paket Barat dan Timur Nusa Penida\n");
		printf("====================================================================\n");
		printf("Lama Travel: %s Hari\n\n", paket.lama);
		printf("Objek Wisata:\n");
		printf("a. Keliling Beach\n");
		printf("b. Broken Beach\n");
		printf("c. Angel's Billabong\n");
		printf("d. Cristal Bay\n");
		printf("e. Diamond Beach\n");
		printf("f. Atuh Beach\n");
		printf("g. Pulau Seribu/Raja Lima\n");
		printf("h. Bukit Telletubies\n\n");
		printf("Fasilitas:\n");
		printf("a. Private Tour Dengan Mobil\n");
		printf("b. Penjemputan Ke Lokasi\n");
		printf("c. Guide Lokal Berpengalaman\n\n");
		break;
		
		case 4 : 
			strcpy (paket.nama, "Paket Snorkling");
			strcpy (paket.lama, "Setengah");
			paket.harga=400000;
			printf("====================================================================\n");
			printf ("                     Paket Snorkling\n");
			printf("====================================================================\n");
			printf("Lama Travel: %s Hari\n\n", paket.lama);
			printf("Spot Snorkling:\n");
			printf("a. Wall Point\n");
			printf("b. Jetty Point\n");
			printf("c. Manta Point\n");
			printf("d. Gamat Bay\n\n");
			printf("Fasilitas:\n");
			printf("a. Private Tour Dengan Mobil\n");
			printf("b. Penjemputan Ke Lokasi\n");
			printf("c. Guide Lokal Berpengalaman\n");
			printf("d. Peralatan Snorkling\n\n");
			break;
			
		case 5 :
			strcpy (paket.nama, "Paket Tirta Yatra");
			strcpy (paket.lama, "Satu");
			paket.harga=450000;
			printf("====================================================================\n");
			printf ("                     Paket Tirta Yatra\n");
			printf("====================================================================\n");
			printf("Lama Travel: %s Hari\n\n", paket.lama);
			printf("Pura Tujuan:\n");
			printf("a. Pura Mobil\n");
			printf("b. Pura Ped\n");
			printf("c. Pura Puncak Mundi\n");
			printf("d. Pura Giri Putri\n\n");
			printf("Fasilitas :\n");
			printf("a. Private Tour Dengan Mobil\n");
			printf("b. Penjemputan Ke Lokasi\n");
			printf("c. Guide Lokal Berpengalaman\n\n");
			break;
		default :
			printf("Mohon Hanya Masukkan Antara Angka 1-5!\n");
			goto pilihan;
	}
	pesan:
	printf("\n\n----------------------------------------------------------------\n");
	printf("Pilih 1 Untuk Pesan\n");
	printf("Pilih 2 Untuk Tambah Fasilitas\n");
	printf("Pilih 3 Untuk Kembali\n\n");
	scanf("%d", &pesanan.pesan);
	fflush(stdin);
	
	switch (pesanan.pesan){
		case 1 :
			pemesanan:
			system("cls");
			printf("----------------------------------------------------------------\n");
			printf("Nama Paket            : %s \n", paket);
			printf("Lama Travel           : %s Hari\n", paket.lama);
			printf("Harga Per Orang       : %d\n", paket.harga);
			printf("Fasilitas Tambahan    : \n");
			for(fasilitas.i=0;fasilitas.i<pilih_fasilitas;fasilitas.i++){
				printf("                          %d. %s\n", fasilitas.banyak_fasilitas[fasilitas.i], fasilitas.nama_fasilitas[fasilitas.i]);
			}
			printf("Harga Semua Fasilitas : %d\n", harga_semua_fasilitas);	
			printf("Nama Pemesan          : ");
			scanf("%s", &pesanan.nama);
			fflush(stdin);
			
			printf("Jumlah Orang          : ");
			scanf("%d", &pesanan.jumlah_orang);
			fflush(stdin);
			
			paket.total_travel=pesanan.jumlah_orang*paket.harga;
			printf("Total Harga Travel    : %d\n", paket.total_travel);
			paket.total=paket.total_travel+harga_semua_fasilitas;
			
			bulan:
			printf("Bulan Kedatangan      : ");
			scanf("%d", &pesanan.bulan_pemesanan);
			fflush(stdin);
			
			if (pesanan.bulan_pemesanan>12){
				printf("Masukkan Bulan Yang Sesuai\n");
				goto bulan;
			}
			tanggal:
			printf("Tanggal Kedatangan    : ");
			scanf("%d", &pesanan.tanggal_pemesanan);
			fflush(stdin);
			
			if (pesanan.bulan_pemesanan==1 || pesanan.bulan_pemesanan==3 || pesanan.bulan_pemesanan==5 || pesanan.bulan_pemesanan==7 || 
			pesanan.bulan_pemesanan==8 ||pesanan.bulan_pemesanan==10 || pesanan.bulan_pemesanan==12){
				if (pesanan.tanggal_pemesanan >31){
				printf("Masukkan Tanggal Yang Sesuai\n");
				goto tanggal;
				}
			}
			else if (pesanan.bulan_pemesanan==4 || pesanan.bulan_pemesanan==6 || pesanan.bulan_pemesanan==9 || pesanan.bulan_pemesanan==11){
				if (pesanan.tanggal_pemesanan>30){
				printf("Masukkan Tanggal Yang Sesuai\n");
				goto tanggal;
				}
			}
			else if (pesanan.bulan_pemesanan==2){
				if (pesanan.tanggal_pemesanan>29){
				printf("Masukkan Tanggal Yang Sesuai\n");
				goto tanggal;
				}
			}
			printf("Tahun Kedatangan      : ");
			scanf("%d", &pesanan.tahun_pemesanan);
			fflush(stdin);
			
			if (pesanan.tahun_pemesanan<tahun_sekarang||
			(pesanan.bulan_pemesanan<bulan_sekarang && pesanan.tahun_pemesanan<= tahun_sekarang)||
			(pesanan.tanggal_pemesanan<tanggal_sekarang && pesanan.bulan_pemesanan<=bulan_sekarang && pesanan.tahun_pemesanan<=tahun_sekarang)){
				printf("Mohon Inputkan Tanggal Kedatangan Yang Sesuai\n");
				getch();
				goto bulan;
			}
			switch (pesanan.bulan_pemesanan) {
				case 1: 
					strcpy (paket.bulan_pesan, "Januari");
					break;
				case 2:
					strcpy (paket.bulan_pesan, "Februari");
					break;
				case 3:
					strcpy (paket.bulan_pesan, "Maret");
					break;
				case 4:
					strcpy (paket.bulan_pesan, "April");
					break;
				case 5: 
					strcpy (paket.bulan_pesan, "Mei");
					break;
				case 6: 
					strcpy (paket.bulan_pesan, "Juni");
					break;
				case 7: 
					strcpy (paket.bulan_pesan, "Juli");
					break;
				case 8: 
					strcpy (paket.bulan_pesan, "Agustus");
					break;
				case 9:
					strcpy (paket.bulan_pesan, "September");
					break;
				case 10: 
					strcpy (paket.bulan_pesan, "Oktober");
					break;
				case 11: 
					 strcpy (paket.bulan_pesan, "November");
					 break;
				case 12: 
					strcpy (paket.bulan_pesan, "Desember");
				}
			printf("\n\n--------------------------------------------\n");
			kirim :
			printf("Tekan 1 untuk kirim data\n");
			printf("Tekan 2 untuk ulangi masukkan data\n");
			printf("Tekan 3 untuk kembali ke menu utama\n");
			scanf("%d", &paket.kirim);
			fflush(stdin);
			
			switch (paket.kirim){
				case 1: 
					nota :
					system("cls");
					printf("------------------------NOTA PEMESANAN-----------------------\n");
					printf("Tanggal             : %s, %d %s %d\n", hari, tanggal_sekarang, bulan, tahun_sekarang);
					printf("Waktu               : %d.%d\n", Sys_T -> tm_hour, Sys_T -> tm_min);
					printf("Nama Paket          : %s\n", paket);
					printf("Lama Travel         : %s Hari\n", paket.lama);
					printf("Harga Per Orang	    : %d\n", paket.harga);
					printf("Fasilitas Tambahan  :\n");
					for(fasilitas.i=0;fasilitas.i<pilih_fasilitas;fasilitas.i++){
						printf(" %d.%s\n", fasilitas.banyak_fasilitas[fasilitas.i], fasilitas.nama_fasilitas[fasilitas.i]);
					}
					printf("Nama Pemesan         : %s\n", pesanan.nama);
					printf("Jumlah Orang         : %d\n", pesanan.jumlah_orang);
					printf("Tanggal Kedatangan   : %d %s %d \n", pesanan.tanggal_pemesanan, paket.bulan_pesan, pesanan.tahun_pemesanan);
					printf("Total Harga Travel   : %d\n", paket.total_travel);
					printf("Total Harga Fasilitas: %d\n", harga_semua_fasilitas);
					printf("Total Harga          : %d\n\n", paket.total);
					
					bayar:
					printf("Bayar		     :");
					scanf("%d", &paket.bayar);
					fflush(stdin);
					if(paket.bayar<paket.total){
						printf("Jumlah Pembayaran Tidak Sesuai!!\n");
					goto bayar;
					}
					else {
						paket.kembalian=paket.bayar-paket.total;
						printf("Kembalian 	:%d", paket.kembalian);
					}
					break;
				case 2: 
					goto pemesanan;
				case 3:
					goto menu_utama;
				default:
					printf("Mohon Hanya Masukkan Antara Angka 1 atau 2!\n");
					goto kirim;
				}
				break;
			case 2:
				system("cls");
				printf("---------------------------------------------------------------------\n");
				printf("| Kode |                 Nama Fasilitas              |      Harga    | \n");
				printf("---------------------------------------------------------------------\n");
				printf("|  1   |    Tiket Boat Pelabuhan Sanur-Nusa Penida   | 75.000/orang  |\n");
				printf("|  2   | Tiket Boat Pelabuhan Tri Buana-Nusa Penida  | 50.000/orang  |\n");
				printf("|  3   |                Kamar Penginapan             | 200.000/kamar |\n");
				printf("|  4   |         Paket 100 Canang + 5 Pejati         | 250.000/paket |\n");
				printf("---------------------------------------------------------------------\n\n");
				
				fasilitas:
				printf("Pilih Fasilitas Yang Diinginkan (1-4) : ");
				scanf("%d", &fasilitas);
				fflush(stdin);
				if (0<fasilitas.fasilitas<5){
					switch (fasilitas.fasilitas) {
						case 1 :
							strcpy (fasilitas.nama_fasilitas[pilih_fasilitas], "Tiket Boat Pelabuhan Sanur-Nusa Penida");
							fasilitas.harga_fasilitas[pilih_fasilitas]=75000;
							break;
						case 2 :
							strcpy (fasilitas.nama_fasilitas[pilih_fasilitas], "Tiket Boat Pelabuhan Tri Buana-Nusa Penida");
							fasilitas.harga_fasilitas[pilih_fasilitas]=50000;
							break;
						case 3 :
							strcpy (fasilitas.nama_fasilitas[pilih_fasilitas], "Kamar Penginapan  ");
							fasilitas.harga_fasilitas[pilih_fasilitas]=200000;
							break;
						case 4 :
							strcpy (fasilitas.nama_fasilitas[pilih_fasilitas], "Paket 100 Canang + 5 Pejati ");
							fasilitas.harga_fasilitas[pilih_fasilitas]=250000;
							break;
					}
					printf("Banyak : ");
					scanf("%d", &fasilitas.banyak_fasilitas[pilih_fasilitas]);
					fflush(stdin);		
						
					fasilitas.total_harga_fasilitas= fasilitas.harga_fasilitas[pilih_fasilitas] * fasilitas.banyak_fasilitas[pilih_fasilitas];
					printf("Total Harga : %d\n\n", fasilitas.total_harga_fasilitas);
					harga_semua_fasilitas= harga_semua_fasilitas + fasilitas.total_harga_fasilitas;							
					printf("Harga Semua Fasilitas Adalah : %d\n", harga_semua_fasilitas);	
					pilih_fasilitas+=1;
						
					tambah_fasilitas:
					printf("Fasilitas Berhasil Ditambahkan\n");
					printf("Ingin Menambah Fasilitas? (Y/T)\n");
					scanf("%c", &fasilitas.tambah_fasilitas);
					fflush(stdin);
					
					if (fasilitas.tambah_fasilitas=='Y'){
						goto fasilitas;
						}
					else if(fasilitas.tambah_fasilitas=='T'){
						goto pemesanan;
						}
					else{
						printf("Mohon Hanya Masukkan Y atau T ! \n");
						goto tambah_fasilitas;
						}
				
			}
		case 3: 
			system ("cls");
			goto menu_utama;
		default :
			printf("Mohon Hanya Masukkan Angka 1 atau 2! \n");
			goto pesan;
	
	}
return (0);
}
